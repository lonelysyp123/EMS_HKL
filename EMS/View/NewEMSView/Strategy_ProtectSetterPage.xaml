                                     Style="{StaticResource Input}" Visibility="Hidden"/>
                            
                            <Button Content="同步信息"
                                    FontSize="11"
                                    Width="80"
                                    Height="25"
                                    Foreground="white"
                                    FontWeight="Bold"
                                    Background="#1890FF"
                                    BorderThickness="0,0,0,0"
                                    Margin="10 0 0 0"
                                    Command="{Binding SyncInfo13Command}" />
                        </StackPanel>
                        <!--第12行-->
                        <StackPanel Grid.Row="12"
                                    Grid.Column="4"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Right">
                            <Button Content="同步数据库"
                                    FontSize="11"
                                    Width="80"
                                    Height="25"
                                    Foreground="white"
                                    FontWeight="Bold"
                                    Background="#1890FF"
                                    BorderThickness="0,0,0,0"
                                    Margin="10 0 10 0"
                                    Command="{Binding SyncInfoDBCommand}"/>
                            <Button Content="读取数据库"
                                    FontSize="11"
                                    Width="80"
                                    Height="25"
                                    Foreground="white"
                                    FontWeight="Bold"
                                    Background="#1890FF"
                                    BorderThickness="0,0,0,0"
                                    Command="{Binding ReadDBInfoCommand}" />
                            <Button Content="读取BCMU信息"
                                    Width="120"
                                    Height="35"
                                    Foreground="white"
                                    FontWeight="Bold"
                                    Margin="20,0,20,0"
                                    Background="#1890FF"
                                    BorderThickness="0,0,0,0"
                                    Command="{Binding ReadBCMUInfoCommand}" />
                            
                        </StackPanel>
                    </Grid>
                    <!--end-->
                </Grid>
            </Border>
        </Grid>
        <!--2、PCS-->
        <Grid Grid.Row="1">
            <Border Background="white"
                    Margin="20,15,0,0"
                    Padding="20,15"
                    CornerRadius="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <localControl:TitleBorder Text="PCS"
                                              Grid.ColumnSpan="6" />
                    <!--BUS侧电压设置-->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <localControl:IconBorder Grid.ColumnSpan="4"
                                                 FIcon_Text="&#xe6be;"
                                                 FIconTextBlock_Text="BUS侧电压设置"
                                                 FIconBorder_Background="#E8F3FF"
                                                 FIcon_Foreground="#2A6BFF" />
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="上限电压（V）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding BUSUpperLimitVolThresh,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="2"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="下限电压（V）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding BUSLowerLimitVolThresh,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="3"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="高压电压（V）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding BUSHVolSetting,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="4"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="低压电压（V）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding BUSLVolSetting,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="5"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Right">
                            <Button Content="读取信息"
                                    Width="120"
                                    Height="35"
                                    Foreground="white"
                                    FontWeight="Bold"
                                    Background="#1890FF"
                                    BorderThickness="0,0,0,0"
                                    Command="{Binding ReadBUSVolInfoCommand}" />
                            <Button Content="同步信息"
                                    Width="120"
                                    Height="35"
                                    Foreground="white"
                                    FontWeight="Bold"
                                    Background="#1890FF"
                                    BorderThickness="0,0,0,0"
                                    Margin="20,0,0,0"
                                    Command="{Binding SyncBUSVolInfoCommand}" />
                        </StackPanel>
                    </Grid>
                    <!--DC侧支路1设置-->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <localControl:IconBorder Grid.ColumnSpan="4"
                                                 FIcon_Text="&#xe619;"
                                                 FIconTextBlock_Text="DC侧支路1设置"
                                                 FIconBorder_Background="#F5E8FF"
                                                 FIcon_Foreground="#8041D5" />
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="电池下限电压（V）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding BTLLimitVol,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="2"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="放电终止电压（V）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding DischargeSTVol,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="3"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="多支路电流调节参数："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding MultiBranchCurRegPar}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="2"
                                    Grid.Column="1"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="电池均充电压（V）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding BatAveChVol,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="2"
                                    Grid.Column="2"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="充电截止电流（A）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding ChCutCurrent,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="2"
                                    Grid.Column="3"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="最大充电电流（A）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding MaxChCurrent,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="2"
                                    Grid.Column="4"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="最大放电电流（A）："
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <TextBox Text="{Binding MaxDisChCurrent,StringFormat=N1}"
                                     Style="{StaticResource Input}" />
                        </StackPanel>
                        <StackPanel Grid.Row="2"
                                    Grid.Column="5"
                                    Style="{StaticResource ContentPanel}"
                                    HorizontalAlignment="Right">
                            <Button Content="读取信息"
                                    Width="120"
                                    Height="35"
                                    Foreground="white"
                                    FontWeight="Bold"
                                    Background="#1890FF"
                                    BorderThickness="0,0,0,0"
                                    Command="{Binding ReadDCBranchInfoCommand}" />
                            <Button Content="同步信息"
                                    Width="120"
                                    Height="35"
                                    Foreground="white"
                                    FontWeight="Bold"
                                    Background="#1890FF"
                                    BorderThickness="0,0,0,0"
                                    Margin="20,0,0,0"
                                    Command="{Binding SyncDCBranchInfoCommand}" />
                        </StackPanel>
                    </Grid>
                    <!--end-->
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
